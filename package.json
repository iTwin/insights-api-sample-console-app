{
  "name": "insights-api-sample-console-app",
  "version": "1.1.0",
  "description": "Node sample application that consumes the Insights API to configure a Report for an iModel.",
  "main": "lib/Main.js",
  "author": "Bentley Systems",
  "license": "MIT",
  "scripts": {
    "build": "tsc 1>&2 && npm run copy:test-assets",
    "clean": "rimraf lib out",
    "lint": "eslint -f visualstudio \"./src/**/*.ts\" 1>&2",
    "start": "(npm run build) & node ./lib/main.js",
    "test": "mocha ./lib/tests/*.test.js",
    "copy:test-assets": "cpx \"./src/tests/assets/**/{*,.*}\" ./lib/tests/assets"
  },
  "dependencies": {
    "@itwin/insights-client": "0.4.0",
    "@bentley/backend-itwin-client": "^2.19.51",
    "@bentley/bentleyjs-core": "^2.19.51",
    "@bentley/ecschema-metadata": "^2.19.51",
    "@bentley/electron-manager": "^2.19.51",
    "@bentley/frontend-authorization-client": "^2.19.51",
    "@bentley/geometry-core": "^2.19.51",
    "@bentley/imodelhub-client": "^2.19.51",
    "@bentley/imodeljs-backend": "^2.19.51",
    "@bentley/imodeljs-common": "^2.19.51",
    "@bentley/imodeljs-frontend": "^2.19.51",
    "@bentley/imodeljs-i18n": "^2.19.51",
    "@bentley/imodeljs-quantity": "^2.19.51",
    "@bentley/itwin-client": "^2.19.51",
    "@bentley/orbitgt-core": "^2.19.51",
    "@bentley/presentation-common": "^2.19.51",
    "@bentley/product-settings-client": "^2.19.51",
    "@bentley/rbac-client": "^2.19.51",
    "@bentley/telemetry-client": "^2.19.51",
    "@bentley/ui-abstract": "^2.19.51",
    "@bentley/webgl-compatibility": "^2.19.51",
    "electron": "^11.1.0"
  },
  "devDependencies": {
    "@bentley/build-tools": "2.19.51",
    "@bentley/eslint-plugin": "2.19.51",
    "@types/chai": "^4.1.4",
    "@types/mocha": "^8.2.2",
    "@types/sinon": "^10.0.2",
    "chai": "^4.1.2",
    "eslint": "^7.11.0",
    "mocha": "^8.3.2",
    "rimraf": "^3.0.2",
    "sinon": "^11.1.1",
    "typescript": "~4.3.0"
  },
  "eslintConfig": {
    "plugins": [
      "@bentley"
    ],
    "extends": "plugin:@bentley/imodeljs-recommended",
    "rules": {
      "@typescript-eslint/naming-convention": "off",
      "dot-notation": "off",
      "no-console": "off"
    }
  },
  "mocha": {
    "timeout": 60000,
    "exit": true,
    "check-leaks": true
  }
}